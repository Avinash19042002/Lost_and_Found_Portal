<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:listitem="@layout/activity_main"
    android:background="@drawable/bg"
        tools:context=".MainActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="61dp"
        android:src="@drawable/ismlogo" />

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="57dp"
        android:text="welcome to Campus Finder"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_slogan"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="23dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:padding="5dp"
        android:text="Enroll Now"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/main_join_now_btn"
       android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"

        android:text="Already have an Account? Login"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


</RelativeLayout>