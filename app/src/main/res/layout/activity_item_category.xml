<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item_categoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Choose Item Category"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/watch"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/smartwatch" />

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/laptop"
            />

        <ImageView
            android:id="@+id/Idcard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/idcard" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/wallets"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/wallet"
            />

        <ImageView
            android:id="@+id/umbrella"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/umbrella"
            />

        <ImageView
            android:id="@+id/text_or_notebooks"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/textbook"
            />

        <ImageView
            android:id="@+id/cards"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/important_card"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphone"
            />

        <ImageView
            android:id="@+id/bicycle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bicycle"
            />

        <ImageView
            android:id="@+id/others"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/others"
            />


    </LinearLayout>





</RelativeLayout>